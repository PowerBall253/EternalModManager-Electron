{
  "name": "eternalmodmanager",
  "version": "1.4.4",
  "description": "Cross platform mod manager for DOOM Eternal.",
  "main": "build/entrypoint.js",
  "author": "PowerBall253",
  "license": "MIT",
  "devDependencies": {
    "@types/adm-zip": "^0.4.34",
    "copyfiles": "^2.4.1",
    "electron": "^13.1.5",
    "electron-builder": "^22.11.7",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@terascope/fetch-github-release": "^0.7.7",
    "adm-zip": "^0.5.5",
    "chokidar": "^3.5.2",
    "clipboardy": "^2.3.0",
    "drag-drop": "^7.2.0",
    "xterm": "^4.13.0",
    "xterm-addon-fit": "^0.5.0"
  },
  "scripts": {
    "compile": "tsc && copyfiles -u 1 -e \"src/**/*.ts\" \"src/**/*\" build",
    "start": "npm run compile && electron .",
    "build": "npm run compile && electron-builder build --publish never"
  },
  "build": {
    "appId": "com.powerball253.eternalmodmanager",
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!**/resources/*",
      "!**/flatpak/*",
      "!**/screenshots/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "snap"
      ]
    },
    "snap": {
      "title": "EternalModManager",
      "artifactName": "EternalModManager.snap",
      "confinement": "strict",
      "summary": "Mod manager for DOOM Eternal.",
      "grade": "stable",
      "plugs": [
        "default",
        "removable-media"
      ]
    },
    "appImage": {
      "artifactName": "EternalModManager.AppImage"
    },
    "portable": {
      "unicode": false,
      "artifactName": "EternalModManager.exe"
    }
  }
}
